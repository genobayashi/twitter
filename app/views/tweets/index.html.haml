%nav.navbar.navbar-default.navbar-fixed-top.global-topbar
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{'data-target' => '#navbarEexample7', 'data-toggle' => 'collapse', :type => 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #navbarEexample7.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.navbar-nav
          = link_to root_path do
            = fa_icon('home lg')
            ホーム
        %li.navbar-nav
          = link_to root_path do
            = fa_icon('flash lg')
            モーメント
        %li.navbar-nav
          = link_to root_path do
            = fa_icon('bell lg')
            通知
        %li.navbar-nav
          = link_to root_path do
