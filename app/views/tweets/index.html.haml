            %span.caret
          %ul.dropdown-menu{:role => 'menu'}
            %li
              = link_to root_path do
                = fa_icon('home lg')
                ホーム
            %li
              = link_to root_path do
                = fa_icon('flash lg')
                モーメント
            %li
              = link_to 'ログアウト', destroy_user_session_path, method: :delete
      %form.navbar-form.navbar-right{role: 'search'}
        .form-group
          %input.form-control{placeholder: 'キーワード検索', type: 'text'}/
        %button.btn.btn-default{type: 'submit', id: 'topbar-seach'} 検索
.t-contents
  .t-content-left
    .t-content-left-top
      .t-content-left-top__background-image
      .t-content-left-top__pofile-image
      .t-content-left-top__name
      .t-content-left-top__user-name
      .t-content-left-top__user-tweet-count
      .t-content-left-top__follow-count
      .t-content-left-top__follower-count
    .t-content-left-bottom
      = render partial: 't-content-left-bottom'
  .t-content-center
    .t-content-center-tweet
      .t-content-center-tweet-top
        .t-content-center-tweet-top__profile_image
          = image_tag(current_user.profile_image, class: 't-content-center-tweet-top__profile_image__size')
        .t-content-center-tweet-top__textarea
          = form_for @tweet do |f|
            = f.text_area :body, placeholder: " いまどうしてる？", rows: 3, cols: 'auto', class: 'form-control', id: 'input-textarea'
            = f.submit 'ツイート', type: 'hidden', class: 'hidden-tweet-btn'
            .t-content-center-tweet-bottom
              %nav.navbar.navbar-default
                .navbar-header
                  %button.navbar-toggle.collapsed{'data-target' => '#navbarEexample7', 'data-toggle' => 'collapse', :type => 'button'}
                    %span.sr-only Toggle navigation
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                #navbarEexample7.collapse.navbar-collapse
                  %ul.nav.navbar-nav
                    %li.navbar-nav
                      = link_to root_path do
                        = fa_icon('camera lg', class: 't-content-center-tweet-bottom-icon')
                    %li.navbar-nav
                      = link_to root_path do
                        = fa_icon('file-video-o lg', class: 't-content-center-tweet-bottom-icon')
                    %li.navbar-nav
                      = link_to root_path do
                        = fa_icon('bar-chart lg', class: 't-content-center-tweet-bottom-icon')
                    %li.navbar-nav
                      = link_to root_path do
                        = fa_icon('map-marker lg', class: 't-content-center-tweet-bottom-icon')
                  %button.btn.btn-default.navbar-btn.navbar-right.t-content-center-tweet-bottom-send-btn
                    %span.glyphicon.glyphicon-pencil{"aria-hidden" => "true"}
                    ツイート
    .t-content-center-bottom
      = render partial: 'tweet', collection: @tweets
  .t-content-right
    .t-content-right-top
      .t-content-right-top-title
        .t-content-right-top-title__name
          おすすめユーザー
        .t-content-right-top-title__update
          更新
        .t-content-right-top-title__see-all
          すべて見る
      .t-content-right-top-recommend-user-list
        - @user.each do |user|
          = render partial: 't-content-right-top-recommend-user-list', locals: { user: user }
    .t-content-right-center
      = render partial: 't-content-right-center'
